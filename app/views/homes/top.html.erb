<div class="contaier">

  <!-- サイト紹介画像 -->
  <%= render 'homes/slick' %>

  <div class="row justify-content-center">
  <!-- ジャンル一覧 -->
  <%= render 'shared/genre_search', genres: @genres %>
    <div class="col-8">
      <!-- ランキング表示 -->
      <h4>売れ筋ランキング</h4>
      <div class="row justify-content-between under-shadow">
        <% @rank_items.each_with_index do |rank_item, rank| %>
          <div class="" style="width: 24rem;">
            <h4 class="text-monospace offset-2">No.<%= "#{(rank + 1)}" %></h4>
            <%= link_to product_path(rank_item.product), class: "text-decoration-none" do%>
              <%= attachment_image_tag rank_item.product, :image, format: "jpeg",fallback: "no_img.png", size: '150x150', class: "product-img" %>
              <div class="card-body">
                <h4 class="card-title"><%= rank_item.product.name %></h4>
                <p class="card-text"><%= rank_item.product.price %>円</p>
              </div>
            <% end %>
          </div>
        <% end %>
      </div>
      <!-- オススメ表示 -->
      <h4>当店のオススメ</h4>
      <div class="row justify-content-between under-shadow">
        <% @recommend_items.each do |recommend_item| %>
          <div class="" style="width: 24rem;">
            <%= link_to product_path(recommend_item), class: "text-decoration-none" do%>
              <%= attachment_image_tag recommend_item, :image, format: "jpeg",fallback: "no_img.png", size: '150x150', class: "product-img" %>
              <div class="card-body">
                <h4 class="card-title"><%= recommend_item.name %></h4>
                <p class="card-text"><%= recommend_item.price %>円</p>
              </div>
            <% end %>
          </div>
        <% end %>
      </div>
      <!-- 新着商品表示 -->
      <h4>新着商品</h4>
      <div class="row justify-content-between under-shadow">
        <% @new_products.each do |new_product| %>
          <div class="" style="width: 24rem;">
            <%= link_to product_path(new_product), class: "text-decoration-none" do%>
              <%= attachment_image_tag new_product, :image, format: "jpeg",fallback: "no_img.png", size: '150x150', class: "product-img" %>
              <div class="card-body">
                <h4 class="card-title"><%= new_product.name %></h4>
                <p class="card-text"><%= new_product.price %>円</p>
              </div>
            <% end %>
          </div>
        <% end %>
      </div>
      <div class="text-right"><p><%= link_to '商品一覧へ>>', products_path %></p></div>
    </div>
  </div>
</div>