<div class='col-lg-10 offset-lg-1'>
  <div class='row'>
    <h3 class="heading">新規会員登録</h3>
  </div>

    <div class="row">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "customers/shared/error_messages", resource: resource %>

          <div class="form-group row">
            <%= f.label :名前 %>
              <span style='display: inline-block;'>（姓）<%= f.text_field :first_name, autofocus: true, autocomplete: "first_name" %></span>
              <span style='display: inline-block;'>（名）<%= f.text_field :last_name, autofocus: true, autocomplete: "last_name" %></span>
          </div>

          <div class="form-group row">
            <%= f.label :フリガナ %>
              <span>（セイ）<%= f.text_field :first_name_kana, autofocus: true, autocomplete: "first_name_kana" %></span>
              <span>（メイ）<%= f.text_field :last_name_kana, autofocus: true, autocomplete: "last_name_kana" %></span>
          </div>
          
          <div class="form-group row">
            <%= f.label :メールアドレス %>
            <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
          </div>

          <div class="form-group row">
            <%= f.label :郵便番号 %>
            <%= f.text_field :post_code, autofocus: true, autocomplete: "post_code" %>
          </div>

          <div class="form-group row">
            <%= f.label :住所（都道府県） %>
            <%= f.collection_select :prefecture_code, JpPrefecture::Prefecture.all, :code, :name, autofocus: true, autocomplete: "post_code" %>     
          </div>

          <div class="form-group row">
            <%= f.label :住所（市区町村） %>
            <%= f.text_field :city, autofocus: true, autocomplete: "city" %>
          </div>

          <div class="form-group row">
            <%= f.label :住所（番地） %>
            <%= f.text_field :block, autofocus: true, autocomplete: "block" %>
          </div>

          <div class="form-group row">
            <%= f.label :パスワード %>
            <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> 文字以上)</em>
            <% end %>
            <%= f.password_field :password, autocomplete: "new-password" %>
          </div>

          <div class="form-group row">
            <%= f.label :パスワード（確認用） %>
            <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
          </div>

          <div class="col-lg-4 offset-lg-8">
            <%= f.submit "新規登録", class: "btn btn-primary" %>
          </div>
      <% end %>
    </div>

    <h3 class="heading">既に登録済みの方</h3>
      <div class='row'>
        <%- if controller_name != 'sessions' %>  
          <span class="texit-right">
            <%= link_to "こちら", new_session_path(resource_name) %>からログインして下さい
          </span>
        <% end %> 
      </div>
</div>
