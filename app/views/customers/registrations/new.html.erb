<div class="container">
  <h3 class="heading">新規登録</h3>
  <div class='row'>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "customers/shared/error_messages", resource: resource %>

        <div class='form-group row'>
          <div class='col-lg-6'>
            <h5><%= f.label :名前 %></h5>
          </div>
          <div class='col-lg-6'>
            <span style='display: inline-block;'>
              （姓）<%= f.text_field :first_name, autofocus: true, autocomplete: 'first_name', class: 'form-control' %>
            </span>
            <span style='display: inline-block;'>
              （名）<%= f.text_field :last_name, autofocus: true, autocomplete: 'last_name', class: 'form-control' %>
            </span>
          </div>
        </div>

        <div class='form-group row'>
          <div class='col-lg-6'>
            <h5><%= f.label :フリガナ %></h5>
          </div>
          <div class='col-lg-6'>
            <span style='display: inline-block;'>
              （セイ）<%= f.text_field :first_name_kana, autofocus: true, autocomplete: 'first_name_kana', class: 'form-control' %>
            </span>
            <span style='display: inline-block;'>
              （メイ）<%= f.text_field :last_name_kana, autofocus: true, autocomplete: 'last_name_kana', class: 'form-control' %>
            </span>
          </div>
        </div>

        <div class='form-group row'>
          <div class='col-lg-6'>
            <h5><%= f.label :メールアドレス %></h5>
          </div>
          <div class='col-lg-6'>
            <%= f.text_field :email, autofocus: true, autocomplete: 'email', class: 'form-control' %>
          </div>
        </div>

        <div class='form-group row'>
          <div class='col-lg-6'>
            <h5><%= f.label :郵便番号 %></h5>
          </div>
          <div class='col-lg-6'>
            <%= f.text_field :post_code, autofocus: true, autocomplete: 'post_code', class: 'form-control' %>
          </div>
        </div>

        <div class='form-group row'>
          <div class='col-lg-6'>
            <h5><%= f.label :都道府県 %></h5>
          </div>
          <div class='col-lg-6'>
            <%= f.collection_select :prefecture_code, JpPrefecture::Prefecture.all, :code, :name %>
          </div>
        </div>

        <div class='form-group row'>
          <div class='col-lg-6'>
            <h5><%= f.label :市 %></h5>
          </div>
          <div class='col-lg-6'>
            <%= f.text_field :city, autofocus: true, autocomplete: 'city', class: 'form-control' %>
          </div>
        </div>

        <div class='form-group row'>
          <div class='col-lg-6'>
            <h5><%= f.label :番地以降 %></h5>
          </div>
          <div class='col-lg-6'>
            <%= f.text_field :block, autofocus: true, autocomplete: 'block', class: 'form-control' %>
          </div>
        </div>

        <div class='form-group row'>
          <div class='col-lg-6'>
            <h5><%= f.label :電話番号%></h5>
          </div>
          <div class='col-lg-6'>
            <%= f.text_field :phone_number, autofocus: true, autocomplete: 'phone_number', class: 'form-control' %>
          </div>
        </div>

        <div class="form-group row">
          <div class='col-lg-6'>
            <h5><%= f.label :パスワード %></h5>
              <% if @minimum_password_length %>
              <em>(<%= @minimum_password_length %> 文字以上)</em>
              <% end %>
          </div>
          <div class='col-lg-6'>
              <%= f.password_field :password, autocomplete: "new-password", class: 'form-control' %>
          </div>
        </div>
        <div class="form-group row">
          <div class='col-lg-6'>
            <h5><%= f.label :パスワード（確認用） %></h5>
          </div>
          <div class='col-lg-6'>
              <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control' %>
          </div>
        </div>

        <div class="form-group row">
          <div class="col-lg-4 offset-lg-8">
            <%= f.submit '新規登録', class:'btn btn-primary' %>
          </div>
        </div>
    <% end %>
  </div>

    <h3 class='row align-items-center'>既に登録済みの方</h3>
      <div class="row">
        <div class="col-lg-6 offset-lg-1">
          <%- if controller_name != 'sessions' %>  
            <span>
              <%= link_to "こちら", new_session_path(resource_name) %>からログインして下さい
            </span>
          <% end %> 
        </div>
      </div>
</div>