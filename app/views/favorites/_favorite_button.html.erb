<% if product.favorited_by?(current_customer) %>
  <%= link_to product_favorites_path(product), method: :delete, remote: true do %>
    <button class="btn btn-danger"><i class="fas fa-paperclip"></i>お気に入り済み</button>
  <% end %>
<% else %>
  <%= link_to product_favorites_path(product), method: :post, remote: true do %>
    <button class="btn btn-light"><i class="fas fa-paperclip"></i>お気に入り登録</button>
  <% end %>
<% end %>