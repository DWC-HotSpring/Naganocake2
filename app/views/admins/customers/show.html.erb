<h1><%= @customer.full_name%>さんの詳細</h1>
<div class="container">
    <div class="row">
        <div class ="col-xs-5 col-xs-offset-1">
          <table class="table">
            <tr>
              <td>顧客ID</td>
              <td><%= @customer.id %>
                <% if @customer.is_deleted == true %>
                  <span>退会済み</span>
                <% else %>
                  <span>有効会員</span>
                <% end %>
              </td>
            </tr>
            <tr>
              <td>氏名</td>
              <td><%= @customer.full_name%></td>
            </tr>
            <tr>
              <td>フリガナ</td>
              <td><%= @customer.first_name_kana + @customer.last_name_kana %></td>
            </tr>
            <tr>
              <td>郵便番号</td>
              <td><%= @customer.post_code %></td>
              </tr>
            <tr>
              <td>住所</td>
              <td><%= @customer.address %></td>
            </tr>
            <tr>
              <td>電話番号</td>
              <td><%= @customer.phone_number %></td>
            </tr>
            <tr>
              <td>メールアドレス</td>
              <td><%= @customer.email %></td>
            </tr>
            <tr>
              <td><%= link_to "編集する", edit_admins_customer_path(@customer)  %></td>
              <td><%= link_to "注文履歴一覧を見る", admins_orders_path %></td>
            </tr>
          </table>
        </div>
    </div>
</div>