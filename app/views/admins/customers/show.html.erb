<h1>会員詳細</h1>

<table class="table">
<tr>
<td>顧客ID</td>
<td><%= @customer.id %></td>
</tr>
<tr>
<td>氏名</td>
<td><%= @customer.first_name + @customer.last_name %></td>
</tr>
<tr>
<td>フリガナ</td>
<td><%= @customer.first_name_kana + @customer.last_name_kana %></td>
</tr>
<tr>
<td>郵便番号</td>
<td><%= @customer.post_code %></td>
</tr>
<tr>
<td>住所</td>
<td><%= @customer.id + @customer.prefecture_code + @customer.city + @customer.block%></td>
</tr>
<tr>
<td>電話番号</td>
<td><%= @customer.phone_number %></td>
</tr>
<tr>
<td>メールアドレス</td>
<td><%= @customer.email %></td>
</tr>
</table>