<h3 class= "heading">注文履歴一覧</h3>
<div class="container">
    <div class="row">
        <div class = "col-xs-10 col-xs-offset-1">
            <table class="table">
                <thead>
                    <tr>
                        <th>購入日時</th>
                        <th>購入者</th>
                        <th>注文個数</th>
                        <th>注文ステータス</th>
                    </tr>
                </thead>
                <tbody>
                    <% @orders.each do |order| %>
                        <tr>
                            <td><%= link_to simple_time(order[:created_at] ), admins_order_path(order) %></td>
                            <td><%= order.customer.full_name %></td>
                            <td><%= order.order_products.map {|hash| hash.quantity}.sum %></td>
                            <td><%= order.order_status %></td>
                        </tr>
                    <% end %>
                </tbody>
            </table>
            <%= paginate @orders %>
        </div>
    </div>
</div>
