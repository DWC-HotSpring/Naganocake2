<h1>Admins::Genres#index</h1>
<p>Find me in app/views/admins/genres/index.html.erb</p>

<%= form_with model:[:admins,@genre], local: true do |f| %>
    <p>ジャンル</p>
    <%= f.text_field :name %>
    <span>有効</span><%= f.radio_button :is_active, :true %>
    <span>無効</span><%= f.radio_button :is_active, :false %>
    <%= f.submit %>
<% end %>



<table>
    <thead>
        <tr>
            <th>ジャンル</th>
            <th>状態</th>
            <th></th>
        </tr>
    </thead>

    <tbody>
    <% @genres.each do |genre| %>
        <tr>
            <td><%= genre.name %></td>
            <td><%= genre.is_active ? "有効" : "無効" %></td>
            <td><%= link_to "編集する", edit_admins_genre_path(genre.id) %></td>
        </tr>
    <% end %>
    </tbody>
</table>
