<h3 class= "heading">ジャンル一覧・追加</h3>
<div class="container">
        <div class="row">
            <div class = "col-xs-5 col-xs-offset-1">
                <%= form_with model:[:admins,@genre], local: true do |f| %>
                <%= render 'shared/error_messages', model: f.object %>
                    <%= f.label :mame, "ジャンル" %>
                    <%= f.text_field :name %>
                        <span>有効</span><%= f.radio_button :is_active, :true %>
                        <span>無効</span><%= f.radio_button :is_active, :false %>
                    <%= f.submit "追加", class:"btn btn-primary" %>
                <% end %>
            </div>
        </div>
        <div class="row">
            <div class = "col-xs-5 col-xs-offset-1">
                <table class="table">
                    <thead>
                        <tr>
                            <th>ジャンル</th>
                            <th>状態</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        <% @genres.each do |genre| %>
                            <tr>
                                <td><%= genre.name %></td>
                                <td><%= genre.is_active ? "有効" : "無効" %></td>
                                <td><%= link_to "編集する", edit_admins_genre_path(genre.id), class:"btn btn-primary" %></td>
                            </tr>
                        <% end %>
                    </tbody>
                </table>
            </div>
        </div>
</div>