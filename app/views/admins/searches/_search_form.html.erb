<%= form_with url: admins_search_path, scope: :searchs, method: :get do |f| %>
    <%= f.text_field :content %>
    <%= f.select :model,
        {"顧客": "customer", "商品": "product"},
        {include_blank: "選択してください"},{ class: 'form-control',required: true} %>
    <%= f.select :how,
        {"完全一致": "match", "前方一致": "forward", "後方一致": "backward", "部分一致": "partical" },
        {include_blank: "選択してください"},{ class: 'form-control',required: true}  %>
    <%= f.submit 'Search' %>
<% end %>