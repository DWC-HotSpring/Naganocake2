<h1>商品詳細</h1>
<div class ="row">
    <div class =row>
        <div class = "col-xs-4 col-xs-offset-1">
            <%= attachment_image_tag @product, :image, :fill, 450, 350, format: 'jpeg' %>
        </div>
        <div class ="col-xs-4">
            <table class="table">
                <tr>
                    <td>商品名</td>
                    <td><%= @product.name %></td>
                </tr>
                <tr>
                    <td>商品説明</td>
                    <td><%= @product.description %></td>
                </tr>
                <tr>
                    <td>ジャンル</td>
                    <td><%= @product.genre.name %></td>
                </tr>
                <tr>
                    <td>税込価格（税抜価格）</td>
                    <td>
                        <%= @product.price %>
                        <span>（<%= price_with_tax(@product.price) %>）</span>
                        <span>円</span>
                    </td>
                </tr>
                <tr>
                    <td>販売ステータス</td>
                    <td><%= @product.is_active ? "販売中" : "売り切れ" %></td>
                </tr>
            </table>
        </div>
    </div>
    <div class =row>
        <div class="col-xs-2 col-xs-offset-10">
            <%= link_to "編集する", edit_admins_product_path(@product.id), class: "btn btn-primary" %>
        </div>
    </div>
</div>