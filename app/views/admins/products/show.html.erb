<h3 class ="heading">商品詳細</h3>
<div class ="row">
        <div class="col-12 text-center">
        </div>
        <div class = "col-xs-4 col-xs-offset-1">
            <%= attachment_image_tag @product, :image, :fill, 450, 350, format: 'jpeg' %>
        </div>
        <div class ="col-xs-4">
            <table class="table" style="table-layout:fixed;">
                <tr>
                    <td>商品名</td>
                    <td><%= @product.name %></td>
                </tr>
                <tr>
                    <td>商品説明</td>
                    <td><%= @product.description %></td>
                </tr>
                <tr>
                    <td>ジャンル</td>
                    <td><%= @product.genre.name %></td>
                </tr>
                <tr>
                    <td style="width:30px;">税込価格（税抜価格）</td>
                    <td>
                        <%= price_with_tax(@product.price) %>
                        <span>（<%= @product.price %>）</span>
                        <span>円</span>
                    </td>
                </tr>
                <tr>
                    <td>販売ステータス</td>
                    <td><%= @product.is_active ? "販売中" : "売り切れ" %></td>
                </tr>
                <tr>
                    <td>オススメ</td>
                    <td><%= @product.is_recommend ? "表示" : "表示しない" %></td>
                </tr>
            </table>
        </div>
    </div>
    <div class =row>
        <div class="col-xs-2 col-xs-offset-10">
            <%= link_to "編集する", edit_admins_product_path(@product.id), class: "btn btn-primary" %>
        </div>
    </div>