<h3 class= "heading">商品一覧</h3>
<div class="container">
    <div class="row">
        <div class = "col-xs-1 col-xs-offset-10"><%= link_to "新規登録",new_admins_product_path %></div>
        <div class = "col-xs-10 col-xs-offset-1">          
            <table class="table">
                <thead>
                    <tr>
                        <th>商品ID</th>
                        <th>商品名</th>
                        <th>税抜価格</th>
                        <th>ジャンル</th>
                        <th>ステータス</th>
                    </tr>
                </thead>
                <tbody>
                    <% @products.each do |product| %>
                        <tr>
                            <td><%= product.id %></td>
                            <td><%= link_to product.name,admins_product_path(product.id) %></td>
                            <td><%= product.price %></td>
                            <td><%= product.genre.name %></td>
                            <td>
                            <% if product.is_active == true %>
                                <%= "販売中" %>
                            <% else %>
                                <%= "売り切れ" %>
                            <% end %>
                            </td>
                        </tr>
                    <% end %>
                </tbody>
            </table>
            <%= paginate @products %>
        </div>
    </div>
</div>