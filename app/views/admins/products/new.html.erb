<h1>商品新規登録</h1>
<div class="container">
    <div class="row">
        <%= form_with model:[:admins,@product], local: true do |f| %>
        <div class="row">
            <div class ="col-xs-4">
                <%= f.attachment_field :image %>
            </div>
            <div class ="col-xs-8">
                <p><%= f.text_field :name %></p>
                <p><%= f.text_area :description %></p>
                <p><%= f.select :genre_id, Genre.all.map { |genre| [genre.name, genre.id] } %></p>
                <p><%= f.text_field :price %></p>
                <p><%= f.select :is_active,[["販売中",true],["売り切れ",false]] %></p>
            </div>
        </div>
        <div class="row">
            <div class="col-xs-4 col-xs-offset-8">
                <%= f.submit "新規登録"%>
            </div>
        </div>
        <% end %>
    </div>
</div>