<div class="container">
  <div class="row">
    <h2>注文履歴詳細</h2>
  </div>

  <div class="row">
    <h3>注文情報</h3>
    <table class="table table-bordered">
      <tr>
        <th>注文日</th>
        <td><%= @order.created_at.strftime('%Y/%m/%d') %></td>
      </tr>
      <tr>
        <th>配送先</th>
        <td>
          <%= @order.post_code %><br>
          <%= @order.prefecture_name %><%= @order.city %><%= @order.block %><br>
          <%= @order.addressee %>
        </td>
      </tr>
      <tr>
        <th>支払方法</th>
        <td><%= @order.payment_method %></td>
      </tr>
      <tr>
        <th>ステータス</th>
        <td><%= @order.order_status %></td>
      </tr>
    </table>
  </div>

  <div class="row">
    <h3>注文内容</h3>
    <table class="table table-bordered">
      <tr>
        <th>商品</th>
        <th>単価（税込み）</th>
        <th>個数</th>
        <th>小計</th>
      </tr>
      <% sum_all = 0 %>
      <% @order.order_products.each do |order_product| %>
      <tr>
        <td><%= order_product.product.name %></td>
        <td><%= order_product.purchase_price %>円</td>
        <td><%= order_product.quantity %>個</td>
        <td><%= sub_total = order_product.purchase_price.to_i * order_product.quantity %>円</td>
      </tr>
      <% sum_all += sub_total %>
      <% end %>
    </table>
  </div>

  <div class="row">
    <h3>請求情報</h3>
    <table class="table table-bordered">
      <tr>
        <th>商品合計</th>
        <td><%= sum_all %>円</td>
      </tr>
      <tr>
        <th>配送料</th>
        <td><%= @order.postage %>円</td>
      </tr>
      <tr>
        <th>ご請求額</th>
        <td><%= sum_all + @order.postage.to_i %>円</td>
      </tr>
    </table>
  </div>


</div>